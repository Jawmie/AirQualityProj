<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:background="#3399FF">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Room Temperature"
            android:id="@+id/rmText" android:layout_alignParentTop="true" android:layout_centerHorizontal="true"/>
    <SeekBar
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/seekBar"
            android:layout_marginTop="52dp" android:indeterminate="false" android:layout_below="@+id/rmText"
            android:layout_alignParentStart="true"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Result:"
            android:id="@+id/rsTxt"
            android:layout_marginTop="81dp" android:layout_below="@+id/seekBar"
            android:layout_alignStart="@+id/rmText"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/resultView" android:layout_alignBottom="@+id/rsTxt" android:layout_toEndOf="@+id/rsTxt"/>
</RelativeLayout>